$('#answer-<%=answer.id%> .answer-errors').html('<%= render 'shared/errors', resource: answer %>');

<% unless answer.errors.present? %>
//  $('#answer-<%= answer.id %>').replaceWith('<%= j render answer %>');
  $('#answer-<%= answer.id %>').fadeOut(function() {
      var new_answer = $('<%= j render answer %>').hide();
      $(this).replaceWith(new_answer);
      $('#answer-<%= answer.id %>').fadeIn();
  });
<% end %>
